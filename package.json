{
  "name": "anvil",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest tests",
    "test:watch": "npm run test -- --watch",
    "lint": "xo src/**/* tests/**/*",
    "lint:fix": "npm run lint -- --fix"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "xo": {
    "space": true,
    "rules": {
      "@typescript-eslint/semi": 0,
      "semicolon": 0,
      "import/extensions": 0,
      "unicorn/no-array-callback-reference": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@sniptt/monads": "^0.5.10",
    "next": "12.1.6",
    "nextjs-backend-helpers": "^0.0.10-3",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.0.1",
    "@types/chai": "^4.3.1",
    "@types/jest": "^27.5.1",
    "@types/node": "17.0.35",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "chai": "^4.3.6",
    "chai-jest": "^1.0.3",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "jest": "^28.1.0",
    "prisma": "^3.14.0",
    "typescript": "4.6.4",
    "xo": "^0.49.0"
  }
}
